    echo "6. Folder: Select '/ (root)'"
    echo "7. Click 'Save'"
    echo
    print_warning "DO NOT use 'GitHub Actions' as the source!"
    echo
    echo "üåü After GitHub Pages deploys:"
    echo "  üè† Primary URL: https://codeddarkness.github.io/taco_pardons/"
    echo "  üìä Direct URL: https://codeddarkness.github.io/taco_pardons/trump_pardons_database.html"
    echo
    echo "üíæ Files deployed:"
    echo "  ‚úÖ index.html (redirects to database)"
    echo "  ‚úÖ trump_pardons_database.html (main application)"
    echo "  ‚úÖ trump_pardons_csv.txt (second-term data)"
    echo "  ‚úÖ trump_pardons_first_term_csv.txt (first-term data)"
    echo "  ‚úÖ .nojekyll (Jekyll disabled)"
    echo "  ‚úÖ README.md (updated documentation)"
    echo
    echo "üöÄ Next steps:"
    echo "  1. Update GitHub Pages settings (see above)"
    echo "  2. Wait for deployment to complete (~1-2 minutes)"
    echo "  3. Test the live site"
    echo "  4. Optionally deploy to local web server"
    echo
    print_success "GitHub Pages should work correctly now! üéâ"
}

# Function to handle cleanup on error
cleanup_on_error() {
    print_error "Fix and merge failed. Repository state preserved."
    print_status "You can manually resolve issues and try again."
    exit 1
}

# Main execution function
main() {
    echo "üîß GitHub Pages Fix and Merge to Main"
    echo "====================================="
    echo
    
    # Set up error handling
    trap cleanup_on_error ERR
    
    # Run all steps
    check_environment
    cleanup_current_branch
    create_github_pages_files
    verify_required_files
    commit_github_pages_fix
    merge_to_main
    push_changes
    deployment_summary
    
    print_success "üéâ All operations completed successfully!"
}

